<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"



    >

    <EditText
        android:id="@+id/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:ems="10"
        android:text="0"
        android:textSize="65dp"
        android:gravity="end"

        />

    <EditText
        android:id="@+id/TextResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:ems="10"
        android:text="0"
        android:textSize="65dp"
        android:gravity="end"

        />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_marginBottom="1pt"
        >


        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="1pt"
            android:width="40pt"
            android:height="40pt"
            android:background="@color/black"
            android:text="C"
            android:textSize="30sp"

            />
        <Button
            android:id="@+id/btnBack"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="Del"
            android:width="40pt"
            android:height="40pt"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"
            />
        <Button
            android:id="@+id/btnDivide"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="/"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"
            />
        <Button
            android:id="@+id/btnMultiply"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="*"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"

            />


        <Button
            android:id="@+id/btn7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="7"
            android:onClick="numberEvent"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />
        <Button
            android:id="@+id/btn8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="8"
            android:onClick="numberEvent"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />
        <Button
            android:id="@+id/btn9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="9"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />

        <Button
            android:id="@+id/btnPercent"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="%"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"



            />

        <Button
            android:id="@+id/btn4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="4"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />
        <Button
            android:id="@+id/btn5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="5"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />
        <Button
            android:id="@+id/btn6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="6"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />

        <Button
            android:id="@+id/btnMinus"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="-"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"



            />

        <Button
            android:id="@+id/btn1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="1"
            android:width="40pt"
            android:height="40pt"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />
        <Button
            android:id="@+id/btn2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="2"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />
        <Button
            android:id="@+id/btn3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:width="40pt"
            android:height="40pt"
            android:text="3"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />

        <Button
            android:id="@+id/btnPlus"
            android:width="30pt"
            android:height="30pt"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"



            />






    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"

        >


        <Button
            android:id="@+id/btnDot"
            android:width="50pt"
            android:height="30pt"
            android:layout_rowWeight="2"
            android:layout_columnWeight="2"
            android:text="."
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />

        <Button
            android:id="@+id/btn0"
            android:width="50pt"
            android:height="40pt"
            android:layout_rowWeight="2"
            android:layout_columnWeight="2"
            android:text="0"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"
            android:layout_marginRight="1pt"


            />

        <Button
            android:id="@+id/btnEqual"
            android:width="50pt"
            android:height="40pt"
            android:layout_rowWeight="2"
            android:layout_columnWeight="2"
            android:text="="
            android:textSize="30sp"
            android:background="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1pt"


            />
    </GridLayout>




</LinearLayout>